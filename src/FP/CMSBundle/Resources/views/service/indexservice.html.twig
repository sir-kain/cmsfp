{% extends '::base.html.twig'%} 
{% block header %} 
{% include 'FPCMSBundle:layout:header.html.twig' %}
{% endblock %} 
{% block body %}
{#<div id="wrapper"> #}

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Liste des services</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Liste des services
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="row">
                                {% for flashMessage in app.session.flashbag.get('modifService') %}
                                    <div id="message" class="alert alert-success alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <strong>Succes:</strong>  {{ flashMessage }}
                                    </div>
                                {% endfor %}
                                {% for flashMessage in app.session.flashbag.get('ajoutService') %}
                                    <div id="message" class="alert alert-success alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <strong>Succes:</strong>  {{ flashMessage }}
                                    </div>
                                {% endfor %}
                        </div>
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Nom Service</th>
                                    <th>Adresse</th>
                                    <th>Telephone</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for service in services %}
                                <tr class="gradeA">
                                    <td>{{service.nomService}}</td>
                                    <td>{{service.adresseService}}</td>
                                    <td>{{service.telService}}</td>
                                    <td class="center"> <a href="{{path('editservice', {id:service.id})}}" title="Modifier"><i class="fa fa-edit btn btn-sm btn-primary" aria-hidden="true"></i></a> / 
                                    {# <a href="" class="btn btn-sm btn-danger btn-delete-service" title="Supprimer"><i class="fa fa-trash" aria-hidden="true"></i> #}
                                    <button data-confirm="Voulez-vous vraiment supprimer ce service ?" class="btn btn-default btn-delete-service" data-id="{{service.id}}">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                     </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}